<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_position_inherit_form" model="ir.ui.view">
            <field name="name">account.fiscal.position.form.inherit</field>
            <field name="model">account.fiscal.position</field>
            <field name="inherit_id" ref="account.view_account_position_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                     <field name="has_exoneration"/>
                </xpath>
                <xpath expr="//page[1]" position="after">
                    <page name="exoneration_config" string="Exoneration" attrs="{'invisible': [('has_exoneration', '!=', True)]}">
                        <group col="3">
                            <field name="exoneration_number"/>
                            <field name="type_exoneration"/>
                            <field name="date"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>